<div class="row">
    <div class="col-12">
        <form class="card" method="POST" enctype="multipart/form-data">
            <div class="row card-body">
                <div class="form-group col-lg-12">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" > 
                    <br>
                    <label>Slugs</label>
                    <input type="text" class="form-control" name="slugs" placeholder="sample-slug-manual-setup"> 
                    <br>
                </div>
                <div class="form-group col-lg-12">
                    <label>Add Primary Image</label>
                    <input type="file" id="input-file-now" name="file_image" class="dropify" /> 
                </div>
                    
                
            </div>
            <div class="col-lg-12">
                
                <textarea name="content" class="summernote"></textarea>
            </div>
            <div class="row card-body">
                <div class="col-lg-4">
                    <label>Category</label>
                    <select class="custom-select" id="category" name="category">
                        <option value="" selected>-- Select Category --</option>
                        <option value="1">select 1</option>
                        <option value="2">select 1</option>


                    </select>
                    <br>                                         
                </div>
                <div class="col-lg-4">
                    <label>Tags</label>
                    <input type="text" class="form-control" name="tags" placeholder="Seprated by comma | maximum 10 tags"><br>                                         
                </div>
                <div class="col-lg-4">
                    <label>Date</label>
                    <input type="text" class="form-control" name="date" placeholder="<%= new Date().toISOString().slice(0, 10); %> " id="mdate"><br>                                         
                </div>
                <div class="col-lg-12">
                    <button type="submit" id="saveToDraft" class="btn btn-outline-info waves-effect waves-light"><i class="mdi mdi-info mr-2"></i>Save As Draft</button>                                           
                    <button type="submit" id="publish" class="btn btn-gradient-success waves-effect waves-light"><i class="mdi mdi-check-all mr-2"></i>Publish</button>                                           
                    </div>



            </div>
        </form>
    </div> <!-- end col -->
</div>